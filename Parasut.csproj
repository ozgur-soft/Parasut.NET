<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Version>1.3.1</Version>
		<RepositoryUrl>https://github.com/ozgur-soft/Parasut.NET</RepositoryUrl>
		<Authors>Özgür Yalçın</Authors>
		<Company>Özgürsoft</Company>
		<Copyright>2022 Özgürsoft</Copyright>
		<Description>An easy-to-use parasut.com API (v4) with .NET</Description>
		<ImplicitUsings>enable</ImplicitUsings>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
	</PropertyGroup>
	<ItemGroup>
	  <None Update="LICENSE.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	  <None Update="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
</Project>